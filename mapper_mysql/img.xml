	</resultMap>
	<select id="select_position_img" parameterType="map" resultMap="position_img_map">
		SELECT
				position_filedata
		FROM
				tm_position
		WHERE
				position2_name = #{position2}
	</select>
	
	<!-- 포메이션 이미지 -->
